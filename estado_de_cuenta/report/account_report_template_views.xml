<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_account_report_template">
        <t t-call="web.external_layout">
            <t t-foreach="doc" t-as="o">
                <div class="mb-2 ml-1 mt-2 row">
                    Fecha del Reporte : 
                    <span class="ml-2 mr-2" t-field="o.start_date"/>
                    <br/>
                    Cliente : <span class="ml-2 mr-2" t-field="o.customer.name"/>
                </div>
                <div class="page">
                    Moneda: USD<br/>
                    <table class="table table-sm o_main_table">
                        <thead style="display: table-row-group">
                            <tr>
                                <th>Factura #</th>
                                <th>Fecha</th>
                                <th>Vencimiento</th>
                                <th>Importe</th>
                                <th>Impuesto</th>
                                <th>Total</th>
                                <th>Estado del Pago</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="importe_dolares" t-value="0.00"/>
                            <t t-set="tax_dolares" t-value="0.00"/>
                            <t t-set="total_dolares" t-value="0.00"/>
                            <t t-foreach="move_data" t-as="data">
                                <tr>
                                    <td><span t-field="data.name"/></td>
                                    <td><span t-field="data.invoice_date"/></td>
                                    <td><span t-field="data.invoice_date_due"/></td>
                                    <td align="right">USD<span t-field="data.amount_untaxed"/></td>
                                    <td align="right">USD<span t-field="data.amount_tax"/></td>
                                    <td align="right">USD<span t-field="data.amount_total"/></td>
                                    <td><span t-field="data.payment_state"/></td>
                                    <t t-set="importe_dolares" t-value="importe_dolares+data.amount_untaxed"/>
                                    <t t-set="tax_dolares" t-value="tax_dolares+data.amount_tax"/>
                                    <t t-set="total_dolares" t-value="total_dolares+data.amount_total"/>
                                </tr>
                            </t>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td align="right">USD <t t-esc="'{0:,.2f}'.format(importe_dolares)"/></td>
                                <td align="right">USD <t t-esc="'{0:,.2f}'.format(tax_dolares)"/></td>
                                <td align="right">USD <t t-esc="'{0:,.2f}'.format(total_dolares)"/></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="page">
                    Moneda: MXN<br/>
                    <table class="table table-sm o_main_table">
                        <thead style="display: table-row-group">
                            <tr>
                                <th>Factura #</th>
                                <th>Fecha</th>
                                <th>Vencimiento</th>
                                <th>Importe</th>
                                <th>Impuesto</th>
                                <th>Total</th>
                                <th>Estado del Pago</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="importe_dolares" t-value="0.00"/>
                            <t t-set="tax_dolares" t-value="0.00"/>
                            <t t-set="total_dolares" t-value="0.00"/>
                            <t t-foreach="move_data2" t-as="data">
                                <tr>
                                    <td><span t-field="data.name"/></td>
                                    <td><span t-field="data.invoice_date"/></td>
                                    <td><span t-field="data.invoice_date_due"/></td>
                                    <td align="right"><span t-field="data.amount_untaxed"/></td>
                                    <td align="right"><span t-field="data.amount_tax"/></td>
                                    <td align="right"><span t-field="data.amount_total"/></td>
                                    <td><span t-field="data.payment_state"/></td>
                                    <t t-set="importe_dolares" t-value="importe_dolares+data.amount_untaxed"/>
                                    <t t-set="tax_dolares" t-value="tax_dolares+data.amount_tax"/>
                                    <t t-set="total_dolares" t-value="total_dolares+data.amount_total"/>
                                </tr>
                            </t>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td align="right"><t t-esc="'{0:,.2f}'.format(importe_dolares)"/></td>
                                <td align="right"><t t-esc="'{0:,.2f}'.format(tax_dolares)"/></td>
                                <td align="right"><t t-esc="'{0:,.2f}'.format(total_dolares)"/></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </t>
        </t>
    </template>

    <template id="report_account_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="estado_de_cuenta.report_account_report_template" t-lang="doc.env.user.lang"/>
            </t>
        </t>
    </template>

</odoo>
