    <template id="products_variants_rating_shop"
              inherit_id="website_sale.products_item"
              active="True" customize_show="True"
              name="Variants On Product Card ">
        <xpath expr="//div[hasclass('o_wsale_product_information')]"
               position="after">
            <div id="products_grid_before_">
                <div class="js_attributes ">
                    <ul class="nav nav-pills flex-column on_change_product_attribute">
                        <li>
                            <t t-foreach="product.sudo().attribute_line_ids"
                               t-as="a">
                                <t t-if="a.attribute_id.name == 'Color' ">
                                    <!--                                    <t t-esc="len(a.value_ids)"/>-->
                                    <t t-foreach="a.value_ids" t-as="v">
                                        <label t-attf-style="background-color:#{v.html_color or v.name}"
                                               class="css_attribute_color">
                                            <input type="checkbox"
                                                   name="attrib"
                                                   t-att-value="'%s-%s' % (a.attribute_id.id,v.id)"
                                                   t-att-data-product-id="product.id"
                                                   t-att-checked="'checked' if v.id in attrib_set else None"
                                                   t-att-title="v.name"/>
                                        </label>
                                    </t>
                                </t>
                            </t>
                        </li>
                    </ul>
                </div>
            </div>
        </xpath>
    </template>

