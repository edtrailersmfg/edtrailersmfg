    <!--Wishlist Modification-->
    <template id="product_wishlist_inherit" inherit_id="website_sale_wishlist.product_wishlist">
        <xpath expr="//section[hasclass('wishlist-section')]" position="after">
            <t t-if="request.env['ir.config_parameter'].sudo().get_param('website_customize_theme_ecommerce_ul_73lines.wishlist_layout') == 'ul_wishlist'">
                <section class="wishlist-section ul-wishlist-section">
                    <h3>My Wishlist</h3>
                    <div class="checkbox">
                        <label class='text-muted'><input type="checkbox" id='b2b_wish' value="1" class="mr8"/>Add
                            product to
                            my cart but keep it in my wishlist
                        </label>
                    </div>
                    <div class="row mt32 mb32">
                        <t t-foreach="wishes" t-as="wish">
                            <t t-set="combination_info" t-value="wish.product_id._get_combination_info_variant()"/>
                            <div class="col-12 col-sm-12 col-md-6 col-lg-3 pb16">
                                <div class="card shadow">
                                    <div t-att-data-wish-id='wish.id' t-att-data-product-id='wish.product_id.id'
                                         class="wish_list_config"
                                         t-att-data-product-tracking-info="json.dumps(request.env['product.template'].get_google_analytics_data(combination_info))">
                                        <div class='wish_img'>
                                            <a t-att-href="wish.product_id.website_url">
                                                <img t-attf-src="/web/image/product.product/#{wish.product_id.id}/image_128"
                                                     class="img img-fluid" style="margin:auto;" alt="Product image"/>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="card-body border-top">
                                        <div class='text-left'>
                                            <strong>
                                                <a t-att-href="wish.product_id.website_url"
                                                   class="text-truncate d-block"
                                                   t-att-title="wish.product_id.display_name">
                                                    <t t-esc="wish.product_id.display_name"/>
                                                </a>
                                            </strong>
<!--                                            <t t-if="wish.product_id.description_sale">-->
                                                <small class='d-none d-md-block product_desc'>
                                                    <p t-field="wish.product_id.description_sale" class="text-muted"/>
                                                </small>
                                            <!--                                            </t>-->
                                            <div class="align-items-center d-flex mb-2">
                                                <div class="font-weight-bold mr-auto">
                                                    <t t-esc="combination_info['price']"
                                                       t-options="{'widget': 'monetary', 'display_currency': website.pricelist_id.currency_id}"/>
                                                    <small t-if="wish.product_id.base_unit_price"
                                                           class="cart_product_base_unit_price d-block text-muted"
                                                           groups="website_sale.group_show_uom_price">
                                                        <t t-call='website_sale.base_unit_price'>
                                                            <t t-set='product' t-value='wish.product_id'/>
                                                        </t>
                                                    </small>
                                                </div>

                                            </div>
                                            <div class="d-flex border-top mt-3 pt-2">
                                                <button type="button" class="btn o_wish_rm no-decoration">
                                                    <small>
                                                        <i class='fa fa-trash-o text-danger'></i>
                                                    </small>
                                                </button>
                                                <div class="wish_compare mr-auto">
                                                    <button type="button" class="btn o_add_to_compare no-decoration p-0"
                                                            t-att-data-product-id='wish.product_id.id'>
                                                        <i t-attf-class="fa fa-exchange"></i>
                                                        Compare
                                                    </button>
                                                </div>
                                                <div class='td-wish-btn w-auto'>
                                                    <input name="product_id" t-att-value="wish.product_id.id"
                                                           type="hidden"/>
                                                    <button type="button" role="button"
                                                            class="btn o_wish_add float-right p-0">
                                                        <i class="fa fa-cart-plus"></i>Add to Cart
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </section>
            </t>
        </xpath>

        <xpath expr="//section[hasclass('wishlist-section')]" position="attributes">
            <attribute name="t-attf-class"
                       add="#{request.env['ir.config_parameter'].sudo().get_param('website_customize_theme_ecommerce_ul_73lines.wishlist_layout') == 'ul_wishlist' and 'd-none' or 'container wishlist-section'}"
                       separator=" "/>
        </xpath>
    </template>

