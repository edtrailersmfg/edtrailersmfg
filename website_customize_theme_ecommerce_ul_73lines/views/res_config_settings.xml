<odoo>

    <record id="res_config_settings_view_form_ultimate_wishlist_layout" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.website.sale.ultimate.wishlist.layout
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_business_snippet_blocks_core_ul_73lines.res_config_settings_view_form_ultimate"/>
        <field name="arch" type="xml">
            <div id="ultimate_themes_settings" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="wishlist_layout" string="Wishlist Page Layout"/>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="wishlist_layout" class="o_light_label" widget="radio"
                                       options="{'horizontal': true}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>