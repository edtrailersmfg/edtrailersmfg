<odoo>
    <record id="res_config_settings_view_form_ultimate" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.website.sale.ultimate
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="website_settings" position="after">
                <h2>Ultimate Theme Settings</h2>
                <div class="row mt16 o_settings_container"
                     id="ultimate_themes_settings">

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_pwa_ultimate"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="PWA"
                                   for="module_pwa_ultimate"/>
                            <div class="text-muted">
                                Enable PWA
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </field>
    </record>
</odoo>