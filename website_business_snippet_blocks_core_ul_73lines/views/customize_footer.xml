        </xpath>


        <!-- Ultimate Copyright -->
        <xpath expr="//div[@data-selector='.o_footer_copyright']"
               position="replace">
            <div data-selector=".o_footer_copyright"
                 data-no-check="true"
                 groups="website.group_website_designer">
                <we-select string="Ultimate Footer Copyright" data-variable="footer-copyright" data-reload="/">
                    <we-button data-customize-website-views="">Default Copyright
                    </we-button>
                    <we-button title="Copyright 1"
                               data-customize-website-views="website_business_snippet_blocks_core_ul_73lines.copyright_1"
                               data-img="">Copyright 1
                    </we-button>
                    <we-button title="Copyright 2"
                               data-customize-website-views="website_business_snippet_blocks_core_ul_73lines.copyright_2"
                               data-img="">Copyright 2
                    </we-button>
                    <we-button title="Copyright 3"
                               data-customize-website-views="website_business_snippet_blocks_core_ul_73lines.copyright_3"
                               data-img="">Copyright 3
                    </we-button>
                    <we-button title="Copyright 4"
                               data-customize-website-views="website_business_snippet_blocks_core_ul_73lines.copyright_4"
                               data-img="">Copyright 4
                    </we-button>
                    <we-button title="Copyright 5"
                               data-customize-website-views="website_business_snippet_blocks_core_ul_73lines.copyright_5"
                               data-img="">Copyright 5
                    </we-button>
                    <we-button title="Copyright 6"
                               data-customize-website-views="website_business_snippet_blocks_core_ul_73lines.copyright_6"
                               data-img="">Copyright 6
                    </we-button>
                    <we-button title="Copyright 7"
                               data-customize-website-views="website_business_snippet_blocks_core_ul_73lines.copyright_7"
                               data-img="">Copyright 7
                    </we-button>
                    <we-button title="Copyright 8"
                               data-customize-website-views="website_business_snippet_blocks_core_ul_73lines.copyright_8"
                               data-img="">Copyright 8
                    </we-button>
                </we-select>
                <we-colorpicker string="Colors"
                                data-customize-website-color="" data-color="copyright"
                                data-with-combinations="true"/>
                <we-select string="Language Selector" data-reload="/">
                    <we-button data-name="language_selector_none_opt"
                               data-customize-website-views="">None
                    </we-button>
                    <we-button
                            data-customize-website-views="portal.footer_language_selector, website_business_snippet_blocks_core_ul_73lines.footer_language_selector_ultimate">
                        Dropdown
                    </we-button>
                    <we-button
                            data-customize-website-views="portal.footer_language_selector, website.footer_language_selector_inline, website_business_snippet_blocks_core_ul_73lines.footer_language_selector_ultimate, website_business_snippet_blocks_core_ul_73lines.footer_language_selector_inline_ultimate">
                        Inline
                    </we-button>
                </we-select>
                <we-select string="⌙ Label" data-dependencies="!language_selector_none_opt" data-reload="/">
                    <we-button data-customize-website-views="">Text</we-button>
                    <we-button
                            data-customize-website-views="website.footer_language_selector_flag, website.footer_language_selector_no_text, website_business_snippet_blocks_core_ul_73lines.footer_language_selector_flag_ultimate, website_business_snippet_blocks_core_ul_73lines.footer_language_selector_no_text_ultimate">
                        Flag
                    </we-button>
                    <we-button
                            data-customize-website-views="website.footer_language_selector_flag, website_business_snippet_blocks_core_ul_73lines.footer_language_selector_flag_ultimate">
                        Flag and Text
                    </we-button>
                </we-select>
            </div>
        </xpath>

        <!-- Ultimate ScrollTop -->
        <xpath expr="//we-select[@data-dependencies='footer_scrolltop_opt']"
               position="inside">
            <we-button string="Style 1" data-select-class="scrolltop_style_1 ultimate_scrolltop "/>
            <we-button string="Style 2" data-select-class="scrolltop_style_2 ultimate_scrolltop"/>
            <we-button string="Style 3" data-select-class="scrolltop_style_3 ultimate_scrolltop"/>
            <we-button string="Style 4" data-select-class="scrolltop_style_4 ultimate_scrolltop"/>
            <we-button string="Style 5" data-select-class="scrolltop_style_5 ultimate_scrolltop"/>
            <we-button string="Style 6" data-select-class="scrolltop_style_6 ultimate_scrolltop"/>
            <we-button string="Style 7" data-select-class="scrolltop_style_7 ultimate_scrolltop"/>
            <we-button string="Style 8" data-select-class="scrolltop_style_8 ultimate_scrolltop"/>
            <we-button string="Style 9" data-select-class="scrolltop_style_9 ultimate_scrolltop"/>
        </xpath>

        <xpath expr="//div[@data-js='HideFooter']"
               position="before">
            <div data-selector="#wrapwrap > footer">
                <we-row string="Scroll Top Position">
                    <we-select data-apply-to=".ultimate_scrolltop">
                        <we-button string="Left" data-select-class="scrolltop_left"/>
                        <we-button string="Right" data-select-class="scrolltop_right"/>
                    </we-select>
                </we-row>

            </div>
        </xpath>

        <xpath expr="//we-select[@data-dependencies='footer_scrolltop_opt']"
               position="after">
            <div data-selector="#wrapwrap > footer">
                <!-- &emsp; -->
                <we-row string=" ⌙ Colors">
                    <we-colorpicker
                            data-select-style="true"
                            data-css-property="background-color"
                            data-color-prefix="bg-"
                            data-apply-to="#o_footer_scrolltop"
                            data-dependencies="footer_scrolltop_opt"/>
                    <we-colorpicker data-select-style="true"
                                    data-css-property="color"
                                    data-color-prefix="text-"
                                    data-apply-to="#o_footer_scrolltop"
                                    data-dependencies="footer_scrolltop_opt"/>
                </we-row>
            </div>
        </xpath>
    </template>
</odoo>