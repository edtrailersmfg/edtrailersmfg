<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>      
        
        <!-- PAGO DE VARIAS FACTURAS --> 
        <record id="view_account_payment_form_multi_l10n_mx_einvoice" model="ir.ui.view">
