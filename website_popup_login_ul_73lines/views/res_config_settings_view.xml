<odoo>

    <record id="res_config_settings_view_form_website_popup_login_ul_73lines" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.popup.login</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='access_rights']" position="after">
                <div class="col-12 col-lg-12 o_setting_box">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="website_login_ul_73lines_option" string="Login Type"/>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="website_login_ul_73lines_option" class="o_light_label" widget="radio"
                                       options="{'horizontal': true}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>