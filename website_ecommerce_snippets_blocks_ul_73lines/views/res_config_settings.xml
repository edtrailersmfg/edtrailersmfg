<odoo>

    <record id="res_config_settings_view_form_ultimate_lazy" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.website.sale.ultimate.lazy
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_business_snippet_blocks_core_ul_73lines.res_config_settings_view_form_ultimate"/>
        <field name="arch" type="xml">
            <div id="ultimate_themes_settings" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_ultimate_website_sale_lazy_load"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Lazy Load"
                               for="module_ultimate_website_sale_lazy_load"/>
                        <div class="text-muted">
                            Enable Website Sale Lazy Load
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>