                                    <button t-if="product_variant_id" type="button" role="button"
                                            class="btn btn-sm btn-secondary o_add_wishlist social_wishlist"
                                            t-att-disabled='in_wish or None'
                                            title="Add to Wishlist" t-att-data-product-template-id="product.id"
                                            t-att-data-product-product-id="product_variant_id"
                                            data-action="o_wishlist">
                                        <span class="fa fa-heart" role="img" aria-label="Add to wishlist"></span>
                                    </button>
                                </div>
                                <div class="o_compare_parent">
                                    <t t-set="product_variant_id"
                                       t-value="product._get_first_possible_variant_id()"/>
                                    <button t-if="product_variant_id"
                                            type="button" role="button"
                                            class="btn btn-sm btn-secondary o_add_compare social_compare"
                                            title="Compare" aria-label="Compare"
                                            t-att-data-product-product-id="product_variant_id"
                                            data-action="o_comparelist">
                                        <span class="fa fa-exchange"></span>
                                    </button>
                                </div>
